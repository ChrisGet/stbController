#!/usr/bin/perl -w
use strict;

use CGI;
use DBM::Deep;

my $query = CGI->new;
print $query->header();

chomp(my $maindir = (`cat homeDir.txt` || ''));
die "Couldn't find where my main files are installed. No \"stbController\" directory was found on your system...\n" if (!$maindir);
$maindir =~ s/\/$//;
my $confdir = $maindir . '/config/';
my $filedir = $maindir . '/files/';
my $htmldir = $maindir . '/scripts/pages/';
my $dragdrop = $htmldir . 'dragDropController.html';

open my $fh, '<', $dragdrop or die "Unable to open $dragdrop: $!\n";
my @controller = <$fh>;
close $fh;
print @controller;

print <<MAIN;
<h1>Drag buttons from the controller on the right in to the Sequence area below</h1>
<h2>You can rearrange the order of commands within the Sequence area by dragging them too</h2>
<h2>Simply drag a command out of the Sequence area to remove it from the sequence</h2>
<br>
<h1><u>Sequence Area</u></h1>
<div id="sequenceArea">
<ol dropzone="" ondrop="dropHandler(event)">
</ol>
</div>
MAIN
